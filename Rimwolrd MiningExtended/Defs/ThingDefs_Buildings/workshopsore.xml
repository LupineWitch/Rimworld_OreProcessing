<?xml version="1.0" encoding="utf-8" ?>


<Defs>

<!-- ==================== Mining Nodes ====================== -->    
 
  
  
  
  <ThingDef ParentName="BuildingBase">
    <defName>MiningPlatform</defName>
    <label> mining platform</label>
    <description>A place for mining every ore one could imagine</description>
    <thingClass>Building_WorkTable</thingClass>
 	<graphicData>
      <texPath>Things/Buildings/Nodes/NodeIron</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>	
	 <drawSize>(3,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <statBases>
      <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
      <WorkToBuild>300</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>true</useHitPoints>
    <size>(3,3)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,0)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <workSpeedPenaltyTemperature>true</workSpeedPenaltyTemperature>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
	    <recipes>
		<li>MineIronOre</li>
		<li>MineGoldOre</li>
		<li>MineCoalOre</li>
		<li>MinePlasteelOre</li>
		<li>MineUraniumOre</li>
		<li>MineSilverOre</li>
    </recipes>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li>
        <compClass>CompReportWorkSpeed</compClass>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
     <li>oreprocessing.PlaceWorker_MiningNode</li>
    </placeWorkers>
  </ThingDef>
  
  

<!-- ==================== Smelters and stuff ====================== -->   

  <ThingDef ParentName="BenchBase">
    <defName>PrimitiveSmelter</defName>
    <label>Primitive smelter</label>
    <description>A place when without research colonist can smelt crude ore, a simple start.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Buildings/PrimitiveSmelter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.5,1.7)</drawSize>
	  <color>(145,87,5)</color>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>800</WorkToBuild>
      <MaxHitPoints>80</MaxHitPoints>
      <Flammability>0.0</Flammability>
      <Cleanliness>-3</Cleanliness>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>2</constructionSkillPrerequisite>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
	<recipes>
		<li>SmeltWeapon</li>
		<li>DestroyWeapon</li>
		<li>SmeltIronOreChunkP</li>
		<li>SmeltSilverOreChunkP</li>
		<li>SmeltGoldOreChunkP</li>
	</recipes>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>130.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
			<li>CoalOre</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BenchBase">
    <defName>FueledSmelter</defName>
    <label>fueled smelter</label>
    <description>A station which uses carbon-based fuel like wood or coal for smelting things.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Buildings/FueledSmelter/FueledSmelter</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
      <Steel>100</Steel>
    </costList>
    <constructEffect>ConstructWood</constructEffect>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>0.2</Flammability>
      <Cleanliness>-3</Cleanliness>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
	<recipes>
		<li>SmeltWeapon</li>
		<li>DestroyWeapon</li>
		<li>SmeltIronOreChunkM</li>
		<li>SmeltGoldOreChunkM</li>			
		<li>SmeltSilverOreChunkM</li>	
	</recipes>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>200.0</fuelConsumptionRate>
        <fuelCapacity>500.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
			<li>CoalOre</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Smithing</li>
	  <li>MedievalSmelting</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>