 <RecipeDef>
    <defName>SmeltIronOreChunkP</defName>
    <label>alloy steel</label>
    <description>Use heat, coal and ore to extract some steel, not most efficient method, but works somewhat.</description>
    <jobString>Smelting metal from chunk.</jobString>
    <workAmount>2400</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkIronOre</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
		<filter>
			<thingDefs>
				<li>CoalOre</li>
			</thingDefs>
		</filter>
		<count>40</count>
		</li>
    </ingredients>
    <products>
      <Steel>10</Steel>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkIronOre</li>
		<li>CoalOre</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

