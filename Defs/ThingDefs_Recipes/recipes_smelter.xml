<?xml version="1.0" encoding="utf-8" ?>



<Defs>
  
  <RecipeDef>
    <defName>SmeltUraniumOreChunk</defName>
    <label>refine uranium</label>
    <description>With use of compounds and heat refine uranium chunk into useful metal</description>
    <jobString>Smelting metal from chunk.</jobString>
    <workAmount>2600</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>ChunkUraniumOre</li>
			  </thingDefs>
			</filter>
			<count>60</count>
		  </li>
		<li>
			<filter>
				<thingDefs>
					<li>Chemfuel</li>
				</thingDefs>
			</filter>
			<count>25</count>
		</li>
    </ingredients>
    <products>
      <Uranium>20</Uranium>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkUraniumOre</li>
		<li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
  
