  <RecipeDef>
    <defName>SmeltIronOreChunk</defName>
    <label>refine steel ore</label>
    <description>With use of compounds and heat refine iron chunk into useful metal</description>
    <jobString>Smelting metal from chunk.</jobString>
    <workAmount>2000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>ChunkIronOre</li>
			  </thingDefs>
			</filter>
			<count>40</count>
		  </li>
		<li>
			<filter>
				<thingDefs>
					<li>CoalOre</li>
					</thingDefs>
			</filter>
			<count>25</count>
		</li>
    </ingredients>
    <products>
      <Steel>35</Steel>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkIronOre</li>
		<li>CoalOre</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>  


