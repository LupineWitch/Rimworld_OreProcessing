<?xml version="1.0" encoding="utf-8" ?>


<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>BrickSpot</defName>
    <label>adobe-brick making spot</label>
    <description>A place for crafting simple bricks</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/CraftingSpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <statBases>
      <WorkToBuild>50</WorkToBuild>
	    <MaxHitPoints>180</MaxHitPoints>
      <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <size>(1,1)</size>
		<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
	<costList>
			      <WoodLog>15</WoodLog>
	</costList>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <workSpeedPenaltyOutdoors>true</workSpeedPenaltyOutdoors>
      <workSpeedPenaltyTemperature>true</workSpeedPenaltyTemperature>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li>
        <compClass>CompReportWorkSpeed</compClass>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
    </placeWorkers>
	<recipes>
	<li>MakeRawAdobe</li>
	</recipes>
  </ThingDef>

<!-- ==================== Mining Nodes ====================== -->    
 
  
  
  
  <ThingDef ParentName="BuildingBase">
    <defName>MiningPlatform</defName>
    <label>Mining platform</label>
    <description>A place for mining every ore one could imagine</description>
    <thingClass>Building_WorkTable</thingClass>
	    <costList>
      <WoodLog>200</WoodLog>
    </costList>
 	<graphicData>
      <texPath>Things/Buildings/MiningPlatform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>	
	 <drawSize>(3,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <statBases>
      <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
      <WorkToBuild>300</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>true</useHitPoints>
    <size>(3,3)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,0)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <workSpeedPenaltyTemperature>true</workSpeedPenaltyTemperature>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
	    <recipes>
		<li>MineIronOre</li>
		<li>MineGoldOre</li>
		<li>MineCoalOre</li>
		<li>MinePlasteelOre</li>
		<li>MineUraniumOre</li>
		<li>MineSilverOre</li>
    </recipes>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li>
        <compClass>CompReportWorkSpeed</compClass>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
     <li>oreprocessing.PlaceWorker_MiningNode</li>
    </placeWorkers>
  </ThingDef>
  
  

<!-- ==================== Smelters and stuff ====================== -->   

  <ThingDef ParentName="BenchBase">
    <defName>PrimitiveSmelter</defName>
    <label>Primitive smelter</label>
    <description>A place where without research colonist can smelt crude ore, a simple start, yet an ingenious colonist is need to build it from nearby rocks, and clay.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Buildings/PrimitiveSmelter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.5,1.7)</drawSize>
	  <color>(145,87,5)</color>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>800</WorkToBuild>
      <MaxHitPoints>80</MaxHitPoints>
      <Flammability>0.0</Flammability>
      <Cleanliness>-3</Cleanliness>
    </statBases>
		  <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
	<recipes>
		<li>SmeltWeapon</li>
		<li>DestroyWeapon</li>
		<li>SmeltIronOreChunkP</li>
		<li>SmeltSilverOreChunkP</li>
		<li>SmeltGoldOreChunkP</li>
	</recipes>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>130.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
			<li>CoalOre</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BenchBase">
    <defName>FueledSmelter</defName>
