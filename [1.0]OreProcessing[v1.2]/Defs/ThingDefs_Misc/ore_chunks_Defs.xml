<?xml version="1.0" encoding="utf-8" ?>

<Defs>


    <ThingDef ParentName="BuildingNaturalBase">
        <defName>ResourceHole</defName>
        <label>Mining hole</label>
        <description>A mining hole.</description>
        <thingClass>Thing</thingClass>
        <category>Ethereal</category>
        <graphicData>
            <texPath>Things/Buildings/MineHole</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <drawSize>(3,3)</drawSize>
        </graphicData>
        <altitudeLayer>Floor</altitudeLayer>
        <destroyable>false</destroyable>
        <useHitPoints>false</useHitPoints>
        <tickerType>Never</tickerType>
		<scatterableOnMapGen>true</scatterableOnMapGen>
        <selectable>true</selectable>
        <size>(3,3)</size>
        <neverOverlapFloors>true</neverOverlapFloors>
        <blockPlants>true</blockPlants>
    </ThingDef>



   <ThingCategoryDef>
    <defName>OreChunks</defName>
    <label>Resource containing chunks</label>
    <parent>Chunks</parent>
  </ThingCategoryDef>
 
 <ThingDef ParentName="ChunkBase">
    <defName>ChunkIronOre</defName>
    <label>iron ore chunk</label>
    <description>A chunk of iron ore. It's useless in its current form, it can be smelted to aquire puryfied ore.</description>
    <graphicData>
      <texPath>orechunks/iron_chunk</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Mass>17</Mass>
    </statBases>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <thingCategories>
      <li>OreChunks</li>
    </thingCategories>
    <smeltProducts>
      <Steel>20</Steel>
    </smeltProducts>
</ThingDef>

